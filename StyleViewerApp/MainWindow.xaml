<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="StyleViewerApp.MainWindow"
        Title="Style Viewer" Height="850" Width="1150"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- ============================================================ -->
        <!-- RESOURCE: TOGGLE SWITCH (For Settings)                       -->

        <!-- ============================================================ -->
        <!-- TITLE BAR BUTTON SKINS (THE FIX FOR MATCHING THEMES)         -->
        <!-- ============================================================ -->

        <!-- ============================================================ -->
        <Style x:Key="ToggleSwitch" TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid Background="Transparent" Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" Grid.Column="1" Width="50" Height="24" CornerRadius="12" Background="#CCC" BorderBrush="#999" BorderThickness="1" HorizontalAlignment="Right">
                                <Ellipse x:Name="Dot" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="2,0,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="1" Opacity="0.3"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Border>
                            <ContentPresenter Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D7"/>
                                <Setter TargetName="Dot" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Dot" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 1. CLASSIC STYLE (Solid Grey, 3D Borders) -->
        <Style x:Key="BtnStyleClassic" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#C0C0C0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="White" BorderThickness="2,2,0,0">
                            <Border BorderBrush="#404040" BorderThickness="0,0,2,2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,2,2"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="BorderThickness" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 2. LUNA/ROYALE STYLE (Rounded, Blue Gradient, Red Close) -->
        <Style x:Key="BtnStyleLuna" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Chrome" CornerRadius="3" BorderThickness="1" BorderBrush="White">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#59A5EB" Offset="0"/>
                                    <GradientStop Color="#0037D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Content" Value="r">
                                <!-- Close Button -->
                                <Setter TargetName="Chrome" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#EB7850" Offset="0"/>
                                            <GradientStop Color="#D73C32" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 3. AERO STYLE (Transparent/Glass, Red Glow Close) -->
        <Style x:Key="BtnStyleAero" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Chrome" Background="{TemplateBinding Background}" CornerRadius="3" BorderThickness="1" BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="#40FFFFFF"/>
                                <Setter TargetName="Chrome" Property="BorderBrush" Value="#80FFFFFF"/>
                            </Trigger>
                            <Trigger Property="Content" Value="r">
                                <!-- Close Button -->
                                <Setter Property="Background" Value="#00000000"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Content" Value="r"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Chrome" Property="Background" Value="#E81123"/>
                                <Setter TargetName="Chrome" Property="BorderBrush" Value="#B00000"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <!-- MAIN BORDER -->
    <Border x:Name="WindowFrame" BorderThickness="1" BorderBrush="#666" Background="#F0F0F0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Title Bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- CUSTOM TITLE BAR -->
            <Grid x:Name="TitleBar" Grid.Row="0" Background="#0050EF" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Assets/Images/win8_logo.png" Margin="5" x:Name="TitleIcon"/>
                <TextBlock x:Name="TitleText" Text="Style Viewer" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold"/>

                <!-- Window Buttons (Styles applied via C#) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="0" Width="45" Click="BtnMinimize_Click"/>
                    <Button Content="1" Width="45" Click="BtnMaximize_Click"/>
                    <Button Content="r" Width="45" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>

            <!-- CONTENT AREA -->
            <Grid Grid.Row="1">

                <!-- 1. HOME SCREEN (Control Panel Style) -->
                <Grid x:Name="HomeGrid" Visibility="Visible" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Address Bar -->
                    <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <Button Width="24" Height="24" Background="Transparent" BorderThickness="0" Content="🡠" Margin="0,0,2,0" Foreground="#0050EF"/>
                                <Button Width="24" Height="24" Background="Transparent" BorderThickness="0" Content="🡢" Foreground="Gray"/>
                            </StackPanel>
                            <Border Grid.Column="1" Margin="5" BorderBrush="#7F9DB9" BorderThickness="1" Background="White">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                                    <Image Source="/Assets/Images/win8_logo.png" Width="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="Control Panel" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="▶" FontSize="10" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Gray"/>
                                    <TextBlock Text="Appearance and Personalization" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="2" Margin="5" BorderBrush="#7F9DB9" BorderThickness="1" Background="White">
                                <Grid>
                                    <TextBlock Text="Search Control Panel" Foreground="Gray" VerticalAlignment="Center" Margin="5,0" FontStyle="Italic"/>
                                    <Button Content="🔍" HorizontalAlignment="Right" Width="20" Background="Transparent" BorderThickness="0"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Background="#FFFFFF">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sidebar -->
                        <Border Grid.Column="0" Background="#F4F7FC" BorderBrush="#D9D9D9" BorderThickness="0,0,1,0">
                            <StackPanel Margin="10">
                                <TextBlock Text="Control Panel Home" Foreground="#0066CC" Margin="0,0,0,10" Cursor="Hand"/>
                                <TextBlock Text="Change desktop icons" Foreground="#0066CC" Margin="10,0,0,5" Cursor="Hand"/>
                                <TextBlock Text="Change mouse pointers" Foreground="#0066CC" Margin="10,0,0,5" Cursor="Hand"/>
                                <Separator Margin="0,15"/>
                                <TextBlock Text="See also" Foreground="#333" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Display" Foreground="#0066CC" Margin="10,0,0,5" Cursor="Hand"/>
                                <Button Click="BtnSettings_Click" Margin="0,30,0,0" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚙" Foreground="#555" Margin="0,0,5,0"/>
                                        <TextBlock Text="App Settings" Foreground="#555"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Theme Icons -->
                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="20">
                            <WrapPanel>
                                <Button Width="280" Height="80" Margin="0,0,15,15" Click="BtnClassic_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Images/win95_logo.png" Width="48" VerticalAlignment="Top"/>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Classic Theme" FontSize="14" FontWeight="Bold" Foreground="#0066CC"/>
                                            <TextBlock Text="Windows 95 style." Foreground="#333" TextWrapping="Wrap" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <Button Width="280" Height="80" Margin="0,0,15,15" Click="BtnLuna_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Images/xp_logo.png" Width="48" VerticalAlignment="Top"/>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Luna Theme" FontSize="14" FontWeight="Bold" Foreground="#0066CC"/>
                                            <TextBlock Text="Windows XP Blue style." Foreground="#333" TextWrapping="Wrap" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <Button Width="280" Height="80" Margin="0,0,15,15" Click="BtnRoyale_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Images/xp_logo.png" Width="48" VerticalAlignment="Top"/>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Royale Theme" FontSize="14" FontWeight="Bold" Foreground="#0066CC"/>
                                            <TextBlock Text="Media Center Energy Blue." Foreground="#333" TextWrapping="Wrap" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <Button Width="280" Height="80" Margin="0,0,15,15" Click="BtnAero_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Images/vista_logo.png" Width="48" VerticalAlignment="Top"/>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Aero Glass" FontSize="14" FontWeight="Bold" Foreground="#0066CC"/>
                                            <TextBlock Text="Vista/7 Transparency." Foreground="#333" TextWrapping="Wrap" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <Button Width="280" Height="80" Margin="0,0,15,15" Click="BtnMetro_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Images/win8_logo.png" Width="48" VerticalAlignment="Top"/>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Metro UI" FontSize="14" FontWeight="Bold" Foreground="#0066CC"/>
                                            <TextBlock Text="Windows 8/10 Flat." Foreground="#333" TextWrapping="Wrap" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <Button Width="280" Height="80" Margin="0,0,15,15" Click="BtnDefault_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="/Assets/Images/win8_logo.png" Width="48" VerticalAlignment="Top" Opacity="0.5"/>
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Windows Default" FontSize="14" FontWeight="Bold" Foreground="#0066CC"/>
                                            <TextBlock Text="Restore system theme." Foreground="#333" TextWrapping="Wrap" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </WrapPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>

                <!-- 2. THEME GALLERY (FULL CONTROLS) -->
                <Grid x:Name="ThemeGrid" Visibility="Collapsed" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="10">
                        <Button HorizontalAlignment="Left" 
        VerticalAlignment="Center" 
        Height="30" 
        Background="Transparent" 
        BorderThickness="0" 
        Cursor="Hand"
        Click="BtnBack_Click">

                            <!-- This StackPanel puts the Image and Text side-by-side -->
                            <StackPanel Orientation="Horizontal">

                                <!-- THE IMAGE -->
                                <Image Source="/Assets/Images/back_arrow.png" 
               Width="16" 
               Height="16" 
               Margin="0,0,8,0" 
               RenderOptions.BitmapScalingMode="HighQuality"/>

                                <!-- THE TEXT -->
                                <TextBlock Text="Back to Control Panel" 
                   VerticalAlignment="Center" 
                   Foreground="#333" 
                   FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="TxtThemeTitle" Text="THEME" FontSize="24" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0">
                                <GroupBox Header="Input Controls" Margin="0,0,0,10" Padding="10">
                                    <StackPanel>
                                        <Label Content="Buttons"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Button Content="Confirm" Width="80" Height="25" Margin="0,0,10,0" IsDefault="True"/>
                                            <Button Content="Cancel" Width="80" Height="25" Margin="0,0,10,0"/>
                                            <Button Content="Disabled" Width="80" Height="25" IsEnabled="False"/>
                                        </StackPanel>
                                        <Label Content="Text Input"/>
                                        <TextBox Margin="0,0,0,10"/>
                                        <Label Content="Password textbox"/>
                                        <PasswordBox Margin="0,0,0,10"/>
                                        <Label Content="Combobox"/>
                                        <ComboBox SelectedIndex="0" Margin="0,0,0,10">
                                            <ComboBoxItem Content="Option One"/>
                                            <ComboBoxItem Content="Option Two"/>
                                        </ComboBox>
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="System Tree" Margin="0,0,0,10" Padding="5">
                                    <TreeView Height="150">
                                        <TreeViewItem Header="Desktop" IsExpanded="True">
                                            <TreeViewItem Header="My Documents">
                                                <TreeViewItem Header="Document1.docx"/>
                                                <TreeViewItem Header="Presentation1.pptx"/>
                                                <TreeViewItem Header="Excel1.xlsx"/>
                                                <TreeViewItem Header="Outlook.pst"/>
                                                <TreeViewItem Header="Teams.exe"/>
                                                <TreeViewItem Header="Chrome.exe"/>
                                            </TreeViewItem>
                                            <TreeViewItem Header="Downloads">
                                                <TreeViewItem Header="ChromeSetup.exe"/>
                                                <TreeViewItem Header="OfficeSetup.exe"/>
                                                <TreeViewItem Header="Image1.png"/>
                                                </TreeViewItem>
                                                <TreeViewItem Header="My Computer">
                                                <TreeViewItem Header="Local Disk (C:)"/>
                                                <TreeViewItem Header="DVD+RW (D:)"/>
                                            </TreeViewItem>
                                        </TreeViewItem>
                                    </TreeView>
                                </GroupBox>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="2">
                                <GroupBox Header="Selection &amp; Sliders" Margin="0,0,0,10" Padding="10">
                                    <StackPanel>
                                        <CheckBox Content="Checked" IsChecked="True" Margin="0,5"/>
                                        <CheckBox Content="Unchecked" IsChecked="False" Margin="0,5"/>
                                        <CheckBox Content="Indeterminate" IsChecked="{x:Null}" Margin="0,5"/>
                                        <RadioButton Content="Radio Option A" IsChecked="True" Margin="0,5"/>
                                        <RadioButton Content="Radio Option B" Margin="0,5"/>
                                        <RadioButton Content="Radio Option C" Margin="0,5"/>
                                        <Label Content="Slider"/>
                                        <Slider Value="50" Maximum="100" Margin="0,10"/>
                                        <Slider Value="50" Maximum="100" 
        TickPlacement="BottomRight" 
        TickFrequency="10" 
        IsSnapToTickEnabled="True"
        Margin="0,10">
                                            <Slider.Resources>
                                                <Style TargetType="{x:Type Thumb}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Grid>
                                                                    <!-- The Pointy Shape -->
                                                                    <Path Data="M 0,0 L 10,0 L 10,12 L 5,18 L 0,12 Z" 
                                  Fill="#F0F0F0" 
                                  Stroke="#707070" 
                                  StrokeThickness="1"
                                  Width="11" Height="19"
                                  VerticalAlignment="Top"
                                  Margin="0,2,0,0">
                                                                        <!-- Margin pushes it down to align with track -->
                                                                        <Path.Effect>
                                                                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                                                                        </Path.Effect>
                                                                    </Path>

                                                                    <!-- The "Grip" Lines inside -->
                                                                    <StackPanel VerticalAlignment="Top" Margin="0,5,0,0" HorizontalAlignment="Center">
                                                                        <Rectangle Width="5" Height="1" Fill="#A0A0A0" Margin="0,1"/>
                                                                        <Rectangle Width="5" Height="1" Fill="#A0A0A0" Margin="0,1"/>
                                                                        <Rectangle Width="5" Height="1" Fill="#A0A0A0" Margin="0,1"/>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Slider.Resources>
                                        </Slider>
                                        <ProgressBar Value="60" Height="15" Margin="0,10"/>
                                        <ProgressBar Value="60" Height="15" Margin="0,10" Foreground="Red"/>
                                        <ProgressBar Value="60" Height="15" Margin="0,10" Foreground="Yellow"/>
                                        <ProgressBar Value="60" Height="15" Margin="0,10" IsIndeterminate="True"/>
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="Calendar &amp; Tabs" Margin="0,0,0,10" Padding="10">
                                    <StackPanel>
                                        <TabControl Height="100" Margin="0,0,0,10">
                                            <TabItem Header="General">
                                                <TextBlock Text="General Info" Margin="10"/>
                                            </TabItem>
                                            <TabItem Header="Settings">
                                                <TextBlock Text="Settings Info" Margin="10"/>
                                            </TabItem>
                                            <TabItem Header="Security">
                                                <TextBlock Text="Security Info" Margin="10"/>
                                            </TabItem>
                                            <TabItem Header="Help">
                                                <TextBlock Text="Help" Margin="10"/>
                                            </TabItem>
                                        </TabControl>
                                        <Calendar HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0,1,0,0" Height="130" Background="#DDDDDD">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="Black" Margin="10" BorderBrush="#333" BorderThickness="4" CornerRadius="4">
                                <Grid>
                                    <MediaElement x:Name="BootPlayer" LoadedBehavior="Manual" Stretch="Uniform"/>
                                    <TextBlock x:Name="VideoStatusText" Text="NO SIGNAL" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="SYSTEM ANIMATION" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="▶ STARTUP" Click="BtnPlayStartup_Click" Width="100" Height="30" Margin="0,0,10,0"/>
                                    <Button Content="⏹ SHUTDOWN" Click="BtnPlayShutdown_Click" Width="100" Height="30" Margin="0,0,10,0"/>
                                    <Button Content="STOP" Click="BtnStopVideo_Click" Width="60" Height="30"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 3. SETTINGS GRID (Aero Style Headers) -->
                <Grid x:Name="SettingsGrid" Visibility="Collapsed" Background="#FAFAFA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,20" Background="#EEE" Height="60">
                        <Button HorizontalAlignment="Left" 
        VerticalAlignment="Center" 
        Height="30" 
        Background="Transparent" 
        BorderThickness="0" 
        Cursor="Hand"
        Click="BtnBack_Click">

                            <!-- This StackPanel puts the Image and Text side-by-side -->
                            <StackPanel Orientation="Horizontal">

                                <!-- THE IMAGE -->
                                <Image Source="/Assets/Images/back_arrow.png" 
               Width="16" 
               Height="16" 
               Margin="0,0,8,0" 
               RenderOptions.BitmapScalingMode="HighQuality"/>

                                <!-- THE TEXT -->
                                <TextBlock Text="Back to Control Panel" 
                   VerticalAlignment="Center" 
                   Foreground="#333" 
                   FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <TextBlock Text="System Settings" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="320"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <!-- SECTION 1 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Image Source="/Assets/images/windows-firewall-control-logo.png" Width="48" Height="48" Margin="0,0,15,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="General Preferences" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#0066CC"/>
                                    <TextBlock Text="Startup and updates behavior" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                            <CheckBox x:Name="ChkSplash" Content="Show splash screen on launch" Style="{StaticResource ToggleSwitch}" IsChecked="True" Margin="60,0,0,20" HorizontalAlignment="Left" IsEnabled="False"/>

                            <!-- SECTION 2 -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <Image Source="/Assets/images/Mundo.png" Width="48" Height="48" Margin="0,0,15,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Region and Language" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#0066CC"/>
                                    <TextBlock Text="Change display language" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                            <ComboBox SelectedIndex="0" Margin="60,0,0,20" HorizontalAlignment="Left" Width="250" Height="25">
                                <ComboBoxItem Content="English (US)"/>
                                <ComboBoxItem Content="More languages soon!" IsEnabled="False"/>
                            </ComboBox>

                            <!-- SECTION 3 -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                <Image Source="/Assets/images/png-clipart-security-and-maintenance-windows-7-taskbar-computer-icons-others-angle-electric-blue.png" Width="48" Height="48" Margin="0,0,15,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="System Maintenance" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#0066CC"/>
                                    <TextBlock Text="Fix problems and reset app" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="60,0,0,0">
                                <Button HorizontalAlignment="Left" 
        VerticalAlignment="Center" 
        Height="30" 
        Background="lime" 
        BorderThickness="1" 
        Cursor="Hand"
        Click="BtnUpdate_Click">

                                    <!-- This StackPanel puts the Image and Text side-by-side -->
                                    <StackPanel Orientation="Horizontal">

                                        <!-- THE IMAGE -->
                                        <Image Source="/Assets/images/images.jpg" 
               Width="16" 
               Height="16" 
               Margin="0,0,8,0" 
               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <!-- THE TEXT -->
                                        <TextBlock Text="Check Updates" 
                   VerticalAlignment="Center" 
                   Foreground="#333" 
                   FontSize="14"/>
                                    </StackPanel>
                                </Button>
                                <Button Content="Reset App" Width="100" Height="30" Background="#FFE6E6" BorderBrush="Red" IsEnabled="False"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1" VerticalAlignment="Top" BorderBrush="#0078D7" BorderThickness="1" Background="White" CornerRadius="5" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="5"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Style Viewer" FontWeight="Bold" FontSize="22" Foreground="#0078D7" HorizontalAlignment="Center"/>
                                <TextBlock Text="Version 1.0.0" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <Image Source="/app-icon.ico" Height="64" Margin="10"/>
                                <TextBlock Text="Developed with WPF and Visual Studio 2026 Insiders." TextWrapping="Wrap" TextAlignment="Center" Margin="0,15"/>
                                <Label Content="System Resources:" FontSize="10" Foreground="Gray"/>
                                <ProgressBar Value="100" Height="10" Foreground="#0078D7" BorderBrush="#0078D7"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- 4. SPLASH SCREEN -->
                <Grid x:Name="SplashGrid" Visibility="Collapsed" Background="#000000">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Assets/Images/win8_logo.png" Width="100" Height="100" Margin="0,0,0,20"/>
                        <TextBlock Text="Starting Windows..." Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>
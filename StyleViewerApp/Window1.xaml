<Window x:Class="StyleViewerApp.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Update" Height="220" Width="480"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ContentRendered="Window_ContentRendered">
    <!-- ADD THIS! -->

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 1. FORCE AERO THEME (Only for this window) -->
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Aero;component/themes/aero.normalcolor.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 2. You can add custom styles below if needed, 
             but the DLL handles the Progress Bar now! -->
        </ResourceDictionary>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <!-- Main Window Border with Shadow -->
    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#666" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <Border.Background>
            <SolidColorBrush Color="White"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <!-- Title -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="50"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- AERO TITLE BAR (Blue Gradient) -->
            <Border Grid.Row="0" CornerRadius="7,7,0,0" MouseDown="TitleBar_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#A9D1F5" Offset="0.0"/>
                        <GradientStop Color="#3F88C5" Offset="0.5"/>
                        <GradientStop Color="#1C6BA0" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="10,0">
                    <!-- Title Text with Glow -->
                    <TextBlock Text="Windows Update" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>

                    <!-- Close Button -->
                    <Button Content="r" FontFamily="Marlett" Foreground="White" 
                            Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Right" Width="25" Height="20"
                            Click="BtnCancel_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- CONTENT AREA -->
            <Grid Grid.Row="1" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Assets/images/images.jpg" Width="48" Height="48" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="Checking for updates..." 
                               FontFamily="Segoe UI" FontSize="16" Foreground="#003399" FontWeight="Bold"/>

                    <TextBlock Text="Style Viewer is searching for available updates..." 
                               FontFamily="Segoe UI" FontSize="12" Foreground="Black" Margin="0,5,0,15"/>

                    <!-- THE AERO PROGRESS BAR (Applying the Style) -->
                    <!-- NEW (Working Animation) -->
                    <!-- The DLL will style this automatically now -->
                    <!-- REMOVE ANY "Style=" property from here -->
                    <ProgressBar x:Name="UpdateProgress" 
             IsIndeterminate="True" 
             Height="16" 
             Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            <!-- FOOTER AREA -->
            <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#DFDFDF" BorderThickness="0,1,0,0" CornerRadius="0,0,7,7">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button Content="Cancel" Width="80" Height="25" Click="BtnCancel_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>